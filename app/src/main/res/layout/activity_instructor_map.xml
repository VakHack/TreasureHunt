<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InstructorMap" />

    <Button
        android:id="@+id/deleteMarkerBackground"
        android:layout_alignParentStart="true"
        android:layout_width="19pt"
        android:layout_height="19pt"
        android:layout_marginStart="5pt"
        android:layout_marginTop="5pt"
        android:paddingTop="4pt"
        android:drawableTop="@drawable/baseline_delete_black_24"
        android:drawableTint="@color/quantum_grey700"
        android:background="@drawable/round_corner"/>

    <EditText
        android:visibility="invisible"
        android:id="@+id/riddleLine"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:background="@drawable/round_corner"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="30pt"
        android:layout_marginStart="5pt"
        android:layout_marginBottom="10pt"
        android:paddingLeft="10pt"
        android:paddingTop="5pt"
        android:paddingRight="10pt"
        android:paddingBottom="5pt" />

    <Button
        android:id="@+id/enterRiddle"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5pt"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10pt"
        android:focusable="true"
        android:paddingTop="5pt"
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:background="@drawable/round_corner"
        android:drawableTint="@color/quantum_grey700"
        android:drawableTop="@drawable/baseline_check_circle_black_24"/>
</RelativeLayout>